<!-- views/botConfig.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bot Configuration</title>
    <link rel="stylesheet" href="/public/style.css">
</head>
<body class="user-body">
    <header>
        <ul>
          <li><a href="/users">Users</a></li>
          <li><a href="/bot-config">Bot Configurations</a></li>
          <li><a href="/daily-tasks">Daily Tasks</a></li>
          <li><a href="/transactions">Transactions</a></li>
        </ul>
        <ul>
          <li><a href="/logout">Logout</a></li>
        </ul>
    </header>
    <form action="/bot-config" method="POST" enctype="multipart/form-data">
        <div>
            <label for="captcha">Captcha Image:</label>
            <input type="file" id="captcha" name="captcha" required>
            <br>
            <% if (config.captchaImagePath) { %>
                <img src="/<%= config.captchaImagePath %>" alt="Current Captcha" width="200">
            <% } %>
        </div>

        <div>
            <label for="captchaText">Captcha Text:</label>
            <input type="text" id="captchaText" name="captchaText" value="<%= config.captchaText || '' %>" required>
        </div>

        <div>
            <label for="captchaAnswer">Captcha Answer:</label>
            <input type="text" id="captchaAnswer" name="captchaAnswer" value="<%= config.captchaAnswer || '' %>" required>
        </div>

        <div>
            <label for="fatherPercentage">Father Percentage:</label>
            <input type="number" id="fatherPercentage" name="fatherPercentage" step="0.01" value="<%= config.fatherPercentage || 0 %>" required>
        </div>

        <div>
            <label for="investorPercentage">Investor Percentage:</label>
            <input type="number" id="investorPercentage" name="investorPercentage" step="0.01" value="<%= config.investorPercentage || 0 %>" required>
        </div>
        <div>
            <label for="fatherCoins">Father Coins:</label>
            <input type="number" id="fatherCoins" name="fatherCoins" step="0.01" value="<%= config.fatherCoins || 0 %>" required>
        </div>

        <div>
            <label for="investorCoins">Investor Coins:</label>
            <input type="number" id="investorCoins" name="investorCoins" step="0.01" value="<%= config.investorCoins || 0 %>" required>
        </div>

        <div>
            <label for="grantMin">Grant Range (Min):</label>
            <input type="number" id="grantMin" name="grantMin" value="<%= config.grantRangeMin || 0 %>" required>
        </div>

        <div>
            <label for="grantMax">Grant Range (Max):</label>
            <input type="number" id="grantMax" name="grantMax" value="<%= config.grantRangeMax || 0 %>" required>
        </div>
        <div>
            <label for="remindermessage">Reminder Message:</label>
            <input type="text" id="remindermessage" name="remindermessage" value="<%= config.remindermessage || "" %>" required>
        </div>
        <div>
            <label for="reminderinterval">Reminder Interval:</label>
            <input type="number" id="reminderinterval" name="reminderinterval" value="<%= config.reminderinterval || 0 %>" required>
        </div>

        <div>
            <button type="submit">Save Configuration</button>
        </div>
    </form>
    <a href="/users">Go to Users</a>
    <a href="/logout">Logout</a>
</body>
</html>
